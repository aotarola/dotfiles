[user]
  name = Andres Otarola
  email = andres@otarola.me
[core]
  editor = hx
  excludesfile = ~/.gitignore
[alias]
  amend = commit -a --amend --no-edit
  r = remote --verbose
[pull]
  rebase = true
[fetch]
  prune = true
[diff]
  colorMoved = zebra
[init]
  defaultBranch = main
[diff]
  tool = difftastic
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true
[alias]
  dft = difftool
